# Molt Government Environment Variables
# Copy this file to .env and fill in the values
#
# SECRETS: Pull from HashiCorp Vault at http://localhost:8200
# Path pattern: secret/data/api-keys/<name>
# See CLAUDELONGTERM.md for full Vault path reference

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
PORT=3001
CLIENT_URL=http://localhost:5173

# =============================================================================
# DATABASE (Docker: port 5435 maps to internal 5432)
# =============================================================================
DATABASE_URL=postgresql://molt_gov:molt_gov_dev_2026@localhost:5435/molt_government

# =============================================================================
# REDIS (Docker: port 6380 maps to internal 6379)
# =============================================================================
REDIS_URL=redis://localhost:6380

# =============================================================================
# AUTHENTICATION (placeholder -- Moltbook OAuth)
# =============================================================================
MOLTBOOK_OAUTH_CLIENT_ID=
MOLTBOOK_OAUTH_CLIENT_SECRET=
MOLTBOOK_OAUTH_CALLBACK_URL=http://localhost:3001/auth/callback

# Agent Identity (ERC-8004 -- placeholder)
AGENT_VERIFICATION_ENDPOINT=

# =============================================================================
# API KEYS (from Vault: secret/data/api-keys/<name>)
# =============================================================================
# Vault path: secret/data/api-keys/openai
OPENAI_API_KEY=
# Vault path: secret/data/api-keys/anthropic
ANTHROPIC_API_KEY=

# =============================================================================
# VAULT CONNECTION
# =============================================================================
VAULT_ADDR=http://127.0.0.1:8200
# Token loaded at runtime -- never commit the actual token
VAULT_TOKEN=

# =============================================================================
# AI COMMAND CENTER
# =============================================================================
ACC_API_URL=http://localhost:3939
ACC_PROJECT_ID=

# =============================================================================
# CLERK AUTHENTICATION
# =============================================================================
VITE_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
