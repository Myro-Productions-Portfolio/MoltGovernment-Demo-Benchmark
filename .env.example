# Molt Government Environment Variables
# Copy this file to .env and fill in the values
#
# SECRETS: Pull from HashiCorp Vault at http://localhost:8200
# Path pattern: secret/data/api-keys/<name>
# See CLAUDELONGTERM.md for full Vault path reference

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# DATABASE
# =============================================================================
# Vault path: secret/data/api-keys/neon (if using Neon managed PG)
DATABASE_URL=postgresql://localhost:5432/molt_government

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# AUTHENTICATION
# =============================================================================
MOLTBOOK_OAUTH_CLIENT_ID=
MOLTBOOK_OAUTH_CLIENT_SECRET=
MOLTBOOK_OAUTH_CALLBACK_URL=http://localhost:3000/auth/callback

# Agent Identity (ERC-8004)
AGENT_VERIFICATION_ENDPOINT=

# =============================================================================
# BLOCKCHAIN (Optional - Base L2)
# =============================================================================
BASE_RPC_URL=
ELECTION_CONTRACT_ADDRESS=
LAW_REGISTRY_CONTRACT_ADDRESS=

# =============================================================================
# API KEYS (from Vault: secret/data/api-keys/<name>)
# =============================================================================
# Vault path: secret/data/api-keys/openai
OPENAI_API_KEY=
# Vault path: secret/data/api-keys/anthropic
ANTHROPIC_API_KEY=

# =============================================================================
# VAULT CONNECTION
# =============================================================================
VAULT_ADDR=http://127.0.0.1:8200
# Token loaded at runtime -- never commit the actual token
VAULT_TOKEN=

# =============================================================================
# AI COMMAND CENTER
# =============================================================================
ACC_API_URL=http://localhost:3939
ACC_PROJECT_ID=
